			<relation reltype="Output" name="OAct4"/>
			
			<field name="ID" type="float" output="OAct4" decimalplaces="0"/>
			<field name="IMG1" type="text" output="OAct4"/>
			<field name="ANGLE" type="text" output="OAct4"/>
				
